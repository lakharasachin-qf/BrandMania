<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/frontPageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_178sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fitsSystemWindows="true"
            app:cardElevation="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frontPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1d2635">


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/paidUserCard"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_crown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.1"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/logo" />

                <View
                    android:id="@+id/leftView"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/logo" />

                <View
                    android:id="@+id/rightView"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/logo"
                    app:layout_constraintTop_toTopOf="@id/logo" />


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/bm_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/webIcon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/website"
                    app:layout_constraintBottom_toBottomOf="@id/webTxt"
                    app:layout_constraintEnd_toStartOf="@id/webTxt"
                    app:layout_constraintTop_toTopOf="@id/webTxt"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/webTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="your website"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_178sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frontPageLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/topBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#1d2635"
                    app:layout_constraintBottom_toBottomOf="@+id/brandName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/brandName" />


                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:text="Pecificaoverseas"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/secondBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorthird"
                    app:layout_constraintBottom_toBottomOf="@+id/address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/address" />

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_outline_location_on_24"
                    app:layout_constraintBottom_toBottomOf="@+id/address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/address"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:maxWidth="@dimen/_120sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Your Address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6sdp"
                    app:layout_constraintStart_toEndOf="@id/locationIcon"
                    app:layout_constraintTop_toBottomOf="@id/brandName" />

                <ImageView
                    android:id="@+id/logoThumbnail"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/digital_card_rect"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/bm_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/roundshape"
                    android:backgroundTint="@color/colorthird"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_outline_call_24"
                    app:layout_constraintEnd_toEndOf="@id/locationIcon"
                    app:layout_constraintStart_toStartOf="@id/locationIcon"
                    app:layout_constraintTop_toBottomOf="@id/locationIcon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/phoneTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:includeFontPadding="false"
                    android:text="Your Mobile No "
                    android:textSize="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/callIcon"
                    app:layout_constraintStart_toEndOf="@id/callIcon"
                    app:layout_constraintTop_toTopOf="@+id/callIcon" />

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/roundshape"
                    android:backgroundTint="@color/colorthird"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_outline_mail_24"
                    app:layout_constraintEnd_toEndOf="@id/callIcon"
                    app:layout_constraintStart_toStartOf="@id/callIcon"
                    app:layout_constraintTop_toBottomOf="@id/callIcon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/emailTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:includeFontPadding="false"
                    android:text="Your Email id "
                    android:textSize="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/emailIcon"
                    app:layout_constraintStart_toEndOf="@id/emailIcon"
                    app:layout_constraintTop_toTopOf="@+id/emailIcon" />


                <ImageView
                    android:id="@+id/websiteIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/roundshape"
                    android:backgroundTint="@color/colorthird"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/website"
                    app:layout_constraintEnd_toEndOf="@id/emailIcon"
                    app:layout_constraintStart_toStartOf="@id/emailIcon"
                    app:layout_constraintTop_toBottomOf="@id/emailIcon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/websiteTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:includeFontPadding="false"
                    android:text="Your Website"
                    android:textSize="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/websiteIcon"
                    app:layout_constraintStart_toEndOf="@id/websiteIcon"
                    app:layout_constraintTop_toTopOf="@+id/websiteIcon" />

                <View
                    android:id="@+id/fourthBackground"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="-65dp"
                    android:background="@drawable/digital_card_round_rect_more"
                    android:backgroundTint="@color/colorthird"
                    android:rotation="45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/thirdBackground"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="-70dp"
                    android:background="@drawable/digital_card_round_rect_more"
                    android:backgroundTint="#1d2635"
                    android:rotation="45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_social_media_facebook"
                    app:layout_constraintEnd_toStartOf="@id/insta"
                    app:layout_constraintTop_toTopOf="@id/wp"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_social_media_instagram"
                    app:layout_constraintEnd_toStartOf="@id/wp"
                    app:layout_constraintTop_toTopOf="@id/wp"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/wp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_social_media_whatsapp"
                    app:layout_constraintEnd_toEndOf="@+id/thirdBackground"
                    app:layout_constraintTop_toTopOf="@+id/thirdBackground"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>