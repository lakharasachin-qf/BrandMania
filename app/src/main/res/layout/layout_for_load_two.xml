<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/firstView"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/cornartwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/gmailLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    >

                    <ImageView
                        android:layout_height="@dimen/_12sdp"
                        android:backgroundTint="@color/colorNavText"
                        android:id="@+id/gmailImage"
                        android:background="@drawable/ic_outline_mail_24"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_centerVertical="true" />

                    <TextView

                        android:id="@+id/gmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/gmailImage"
                        android:includeFontPadding="false"
                        android:maxWidth="@dimen/_120sdp"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_email"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_8sdp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/contactLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:minWidth="@dimen/_100sdp"
                    tools:ignore="UnknownIdInLayout">

                    <ImageView
                        android:id="@+id/contactImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_outline_call_24"
                        android:backgroundTint="@color/colorNavText" />

                    <TextView
                        android:id="@+id/contactText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/contactImage"
                        android:includeFontPadding="false"
                        android:maxWidth="@dimen/_100sdp"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_mobile"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_8sdp"></TextView>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/cornartwo">

                <RelativeLayout

                    android:id="@+id/locationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    >

                    <ImageView
                        android:id="@+id/locationImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_outline_location_on_24"
                        android:backgroundTint="@color/colorNavText" />

                    <TextView

                        android:id="@+id/locationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/locationImage"
                        android:includeFontPadding="false"
                        android:maxWidth="@dimen/_150sdp"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_address"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_8sdp"></TextView>

                </RelativeLayout>

                <RelativeLayout

                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/websiteLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
                  android:layout_marginLeft="@dimen/_7sdp"
                    android:minWidth="@dimen/_100sdp"
                    tools:ignore="UnknownIdInLayout">

                    <ImageView
                        android:id="@+id/websiteImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_outline_language_24"
                        android:backgroundTint="@color/colorNavText" />

                    <TextView
                        android:id="@+id/websiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/websiteImage"
                        android:includeFontPadding="false"
                        android:maxWidth="@dimen/_100sdp"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_website"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>