<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shape_for_bullet"
            app:tint="#BFBFBF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_4sdp">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_toStartOf="@+id/newLabels"
                android:fontFamily="@font/montserrat_semibold"
                android:text="6 - Template/Brand"
                android:textSize="@dimen/_9sdp" />

            <com.facebook.shimmer.ShimmerFrameLayout

                android:id="@+id/newLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_7sdp"
                android:orientation="vertical"
                android:visibility="gone"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="1"
                app:shimmer_base_color="@color/white"
                app:shimmer_direction="right_to_left"
                app:shimmer_dropoff="80"
                app:shimmer_highlight_alpha="0"
                app:shimmer_highlight_color="#fff"
                shimmer:shimmer_duration="1500">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_label"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="visible" />
            </com.facebook.shimmer.ShimmerFrameLayout>

        </RelativeLayout>


    </LinearLayout>
</layout>