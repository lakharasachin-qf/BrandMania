<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:theme="@style/AppTheme_material_theme"
        android:layout_height="match_parent"
        tools:context=".Activity.ColorAndTextEditActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:visibility="visible"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:id="@+id/main_linearlayout_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:elevation="0dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/backIcon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_left_arrow" />

                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/backIcon"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="My Busineshfghfghfghfgfhghfhfs"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/videoTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/favSection"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_play_button"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/downloadIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_cloud_download_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/downloadIcon"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_share_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:id="@+id/favSection"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/shareIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/fabroutIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:src="@drawable/ic_baseline_favorite_border_24"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/addfabroutIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/inter_semibold"
                        android:src="@drawable/ic_baseline_favorite_24"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>




            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>



        <ImageView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-100dp"
            android:src="@drawable/bottom">

        </ImageView>
        <RelativeLayout
            android:id="@+id/recommendation"
            android:layout_below="@+id/my_toolbar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/recoImgeRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:background="@color/colorNavText"
                android:elevation="@dimen/_5sdp"
                app:cardElevation="@dimen/_15sdp"
                >
                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp">
                    <TextView
                        android:visibility="visible"
                       android:id="@+id/backgroundClick"
                        android:hint="Change Background Color"
                        android:textColorHint="@color/simmerColor"
                       android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>



                   <ImageView
                       android:id="@+id/backImage"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"></ImageView>


                            <ImageView
                                android:visibility="gone"

                                android:scaleType="fitXY"
                                android:id="@+id/editableImageview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </ImageView>

                    <RelativeLayout
                        android:id="@+id/elementFooter"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </RelativeLayout>

                    <ImageView
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frameImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>

                        <EditText
                            android:id="@+id/textClick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:focusable="true"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@color/colorNavText"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/inter_semibold"
                            android:hint="Type Your Text"
                            android:textColorHint="@color/simmerColor"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone"></EditText>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/clorframeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recoImgeRelative"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabLayout
                        app:tabTextAppearance="@style/CustomViewAllTab"
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        app:tabMode="scrollable"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appbarLayout"
                        android:layout_marginTop="-3dp"
                        android:background="@color/colorNavText"
                        app:tabIndicatorColor="@color/colorPrimary" />
                    <!--  <com.google.android.material.tabs.TabLayout
                          android:id="@+id/tabLayout"
                          style="@style/MyTabLayout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/appbarLayout"
                          android:layout_marginTop="-3dp"

                          android:background="@android:color/transparent"
                          app:tabGravity="fill"
                          app:tabIndicatorColor="@color/colorPrimary"
                          app:tabIndicatorHeight="0dp"
                          app:tabMinWidth="@dimen/_60sdp"
                          app:tabMode="scrollable" />-->


                    <!--android:layout_marginRight="@dimen/_60sdp"-->
                </RelativeLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp" />
            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView

                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/rvConstraintTools"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/roundbackground"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/row_editing_tools" />


        </RelativeLayout>

    </RelativeLayout>
</layout>