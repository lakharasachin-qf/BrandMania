<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:theme="@style/AppTheme_material_theme"
        android:layout_height="match_parent"
        tools:context=".Activity.ColorAndTextEditActivity">
        <androidx.appcompat.widget.Toolbar
            android:visibility="visible"
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/toolbar_background_second"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:id="@+id/main_linearlayout_title"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <ImageView
                    android:id="@+id/backIcon"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>
                <ImageView
                    android:id="@+id/downloadIcon"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_cloud_download_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>
                <ImageView
                    android:layout_toLeftOf="@+id/downloadIcon"
                    android:id="@+id/fabroutIcon"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/recommendation"
            android:layout_below="@+id/my_toolbar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/recoImgeRelative"
                android:elevation="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@color/colorNavText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp">
                    <TextView
                        android:visibility="gone"
                       android:id="@+id/textClick"
                        android:hint="CLICK HEAR"
                        android:textColorHint="@color/simmerColor"
                        android:textSize="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <ja.burhanrashid52.photoeditor.PhotoEditorView
                        android:id="@+id/recoImageee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />
                    <ImageView

                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/recoframe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/clorframeLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_below="@+id/recoImgeRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.tabs.TabLayout
                    android:layout_marginRight="@dimen/_60sdp"
                    style="@style/MyTabLayout"
                    app:tabMinWidth="@dimen/_60sdp"
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabGravity="fill"
                    android:background="@android:color/white"
                    android:layout_below="@+id/appbarLayout"
                    android:layout_marginTop="-3dp"
                    ></com.google.android.material.tabs.TabLayout>
                <TextView
                    style="@style/MyTabLayout"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/holo_blue_dark"
                    android:fontFamily="@font/inter_bold"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:text="Done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                </RelativeLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabLayout"
                    android:layout_centerInParent="true"

                    tools:layout_editor_absoluteX="8dp" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/rvConstraintTools"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/roundbackground"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/row_editing_tools" />


        </RelativeLayout>

    </RelativeLayout>
</layout>