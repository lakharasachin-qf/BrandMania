<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorNavText"
        app:cardElevation="0dp">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--       <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/image"
                       android:src="@drawable/noconnection_icon"
                       android:layout_width="@dimen/_100sdp"
                       android:layout_height="@dimen/_100sdp"/>-->
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/image"
                android:padding="@dimen/_30sdp"
                android:src="@drawable/noconnection"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>
            <TextView
                android:layout_marginTop="-20dp"
                android:id="@+id/text1"
                android:layout_below="@id/image"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="@string/opps_no_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:layout_below="@id/text1"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp"
                android:text="@string/please_check_your_internet_connectivity_amp_get_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>