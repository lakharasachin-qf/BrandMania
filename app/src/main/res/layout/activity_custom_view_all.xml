<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rootBackground"
        android:layout_height="match_parent"
        tools:context=".Activity.EditPicActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/toolbar_background_second"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:visibility="visible"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:id="@+id/main_linearlayout_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:elevation="0dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/backIcon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_left_arrow"></ImageView>

                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/backIcon"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/montserratsemibold"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="My Business"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/downloadIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_cloud_download_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/downloadIcon"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_share_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>

                <ImageView
                    android:id="@+id/fabroutIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/shareIcon"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></ImageView>

                <ImageView
                    android:id="@+id/addfabroutIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/shareIcon"
                    android:fontFamily="@font/inter_semibold"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:visibility="gone"></ImageView>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-100dp"
            android:src="@drawable/bottom">

        </ImageView>
        <RelativeLayout
            android:id="@+id/customeViewRelative"
            android:layout_below="@+id/my_toolbar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/CustomImageCardView"
                android:elevation="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@color/colorNavText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <RelativeLayout
                    android:id="@+id/CustomImageMain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp">
                    <ImageView

                        android:id="@+id/backImage"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:scaleType="fitXY"
                         >
                    </ImageView>


                    <ImageView
                        android:id="@+id/frameImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:scaleType="fitXY"></ImageView>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/CustomImageCardView"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/TabLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/recoImgeRelative"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            style="@style/MyTabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/appbarLayout"
                            android:layout_marginTop="-3dp"
                            android:layout_marginRight="@dimen/_60sdp"
                            android:background="@android:color/transparent"
                            app:tabGravity="fill"
                            app:tabIndicatorHeight="0dp"
                            app:tabMinWidth="@dimen/_60sdp"
                            app:tabMode="scrollable" />


                    </RelativeLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="8dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"

                    android:paddingRight="@dimen/_5sdp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/customTabRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />


                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_view_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        shimmer:shimmer_duration="800">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/item_simmer_visitors_layout" />

                            <include layout="@layout/item_simmer_visitors_layout" />

                            <include layout="@layout/item_simmer_visitors_layout" />

                            <include layout="@layout/item_simmer_visitors_layout" />

                            <include layout="@layout/item_simmer_visitors_layout" />
                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone">
                        <ImageView
                            android:layout_gravity="center"

                            android:src="@drawable/notification"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_200sdp">

                        </ImageView>
                        <TextView
                            android:id="@+id/emptyStateMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="@font/poppins_regular"
                            android:text="No Image Found"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <ImageView

                        android:id="@+id/allSetImage"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@+id/viewRecoRecycler"
                        android:scaleType="fitXY"
                        android:visibility="gone" />


                </RelativeLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>