<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:shimmer="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme_material_theme"
        tools:context=".Activity.brand.ViewBrandActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:visibility="visible"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:id="@+id/main_linearlayout_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/BackButton"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_left_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/BackButton"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="My Business"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-100dp"
            android:src="@drawable/bottom">

        </ImageView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/my_toolbar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    shimmer:shimmer_duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/item_simmer_layout_list" />

                        <include layout="@layout/item_simmer_layout_list" />

                        <include layout="@layout/item_simmer_layout_list" />

                        <include layout="@layout/item_simmer_layout_list" />

                        <include layout="@layout/item_simmer_layout_list" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/getBrandList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/_70sdp"
                    tools:ignore="MissingConstraints">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/emptyStateMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/no_brendlist_found"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </LinearLayout>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addBrandImage"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="visible"
            shimmer:borderWidth="0dp"
            shimmer:elevation="@dimen/_2sdp"
            shimmer:maxImageSize="@dimen/_15sdp"
            shimmer:rippleColor="@color/colorNavText"
            shimmer:srcCompat="@drawable/ic_add_icon"
            shimmer:tint="@color/colorNavText" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:backgroundTint="#FFF8EC"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:minHeight="@dimen/_200sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Add "
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:text="Your"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:includeFontPadding="false"
                    android:text="Brand"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_26sdp" />

                <View
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/addbrandview"
                    android:backgroundTint="#D5D5D5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Currently you have no brand for your account. Please add brand and enjoy using our app."
                    android:textSize="@dimen/_8sdp" />


                <RelativeLayout
                    android:id="@+id/continueBtn"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/banner_button_backgroundshap"
                    android:backgroundTint="@color/colorthird">

                    <TextView
                        android:id="@+id/regBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="0"
                        android:text="     Continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textDirection="ltr"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@drawable/addbrandbackgroundshap"
                        android:elevation="@dimen/_3sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/ic_add_brand_illustration" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>