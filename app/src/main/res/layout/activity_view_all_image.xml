<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_material_theme"
    tools:context=".Activity.ViewAllImage">
    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/toolbar_background_second"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:id="@+id/main_linearlayout_title"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <RelativeLayout

                android:layout_marginRight="@dimen/_7sdp"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/backIcon"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_left_arrow"></ImageView>
                <TextView
                    android:id="@+id/titleName"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/backIcon"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="My Business"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>


            <ImageView
                android:id="@+id/downloadIcon"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_cloud_download_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/colorNavText"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"></ImageView>
            <ImageView
                android:layout_toLeftOf="@+id/downloadIcon"
                android:id="@+id/shareIcon"
                android:src="@drawable/ic_baseline_share_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/colorNavText"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"></ImageView>

            <ImageView
                android:layout_toLeftOf="@+id/shareIcon"
                android:id="@+id/fabroutIcon"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/colorNavText"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"></ImageView>
            <ImageView
                android:visibility="gone"
                android:layout_toLeftOf="@+id/shareIcon"
                android:id="@+id/addfabroutIcon"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/colorNavText"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"></ImageView>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_marginStart="-100dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bottom"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_300sdp">

    </ImageView>
    <RelativeLayout
        android:id="@+id/recommendation"
        android:layout_below="@+id/my_toolbar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/recoImgeRelative"
            android:elevation="@dimen/_5sdp"
            app:cardElevation="@dimen/_15sdp"
            android:background="@color/colorNavText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp">

        <ProgressBar
            android:layout_centerVertical="true"
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:id="@+id/backgrounImageDuplicate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp">
        </ImageView>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/recoImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp">
        </ImageView>
        <ImageView
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:id="@+id/FrameImageDuplicate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp">
        </ImageView>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/customFrameRelative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            >

            <RelativeLayout
                android:id="@+id/logoCard"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:elevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/imgEmptyStateFirst"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_gallry" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="Select Logo"
                            android:textColor="@color/colorPrimary"
                            android:textAlignment="center"
                            android:textSize="@dimen/_6sdp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logoCustom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder"
                        android:visibility="gone" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/actionDeleteFirst"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"


                    android:elevation="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"

                    android:visibility="gone" />
            </RelativeLayout>

            <EditText
                android:id="@+id/customFrameWebsite"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/logoCard"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:hint="Enter Your Website"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/simmerColor"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"></EditText>

            <RelativeLayout
                android:id="@+id/addressBackgrand"
                android:background="@color/colorthird"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <RelativeLayout
                    android:id="@+id/contactBackgrand"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp">
                    <EditText
                        android:id="@+id/customeContactEdit"
                        android:textColor="@color/colorNavText"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="Enter Contact Number"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="10"
                        android:fontFamily="@font/inter_semibold"
                        android:textColorHint="@color/simmerColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></EditText>
                </RelativeLayout>

                <EditText
                    android:id="@+id/customAddressEdit"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:textColor="@color/colorNavText"
                    android:background="@android:color/transparent"
                    android:hint="Enter Your Address"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColorHint="@color/simmerColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></EditText>

            </RelativeLayout>


        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:visibility="visible"
            android:id="@+id/recoframe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
          >
        </androidx.viewpager.widget.ViewPager>



    </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/SliderDots"
            android:layout_below="@+id/recoImgeRelative"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/SliderDots"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/clorframeLayout"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_below="@+id/recoImgeRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.tabs.TabLayout
                        android:layout_marginRight="@dimen/_60sdp"
                        style="@style/MyTabLayout"
                        app:tabMinWidth="@dimen/_60sdp"
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorHeight="0dp"
                        app:tabMode="scrollable"
                        app:tabGravity="fill"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/appbarLayout"
                        android:layout_marginTop="-3dp"
                        ></com.google.android.material.tabs.TabLayout>
                    <TextView
                        style="@style/MyTabLayout"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/holo_blue_dark"
                        android:fontFamily="@font/inter_bold"
                        android:textAlignment="center"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:text="Done"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </RelativeLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabLayout"
                    android:layout_centerInParent="true"
                    tools:layout_editor_absoluteX="8dp" />
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/viewRecoRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    shimmer:shimmer_duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/item_simmer_visitors_layout" />

                        <include layout="@layout/item_simmer_visitors_layout" />

                        <include layout="@layout/item_simmer_visitors_layout" />

                        <include layout="@layout/item_simmer_visitors_layout" />

                        <include layout="@layout/item_simmer_visitors_layout" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/emptyStateMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:text="No Image Found"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <ImageView

                    android:scaleType="fitXY"
                    android:layout_below="@+id/viewRecoRecycler"
                    android:visibility="gone"
                    android:id="@+id/allSetImage"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp">
                </ImageView>


            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>




</RelativeLayout>
</layout>