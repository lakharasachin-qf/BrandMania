<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            card_view:cardBackgroundColor="@color/simmerColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="@dimen/_7sdp"
            card_view:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true">

            <LinearLayout
                android:visibility="invisible"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:src="@drawable/ic_digital_card"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Create\nDigital Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            card_view:cardBackgroundColor="@color/simmerColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="@dimen/_7sdp"
            card_view:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true">

            <LinearLayout
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_setting_new"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <TextView
                    android:textAlignment="center"

                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_8sdp"

                    android:fontFamily="@font/inter_medium"
                    android:text="Create\nCustom Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            card_view:cardBackgroundColor="@color/simmerColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="@dimen/_7sdp"
            card_view:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_birthday_card"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <TextView
                    android:textAlignment="center"

                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Create\nGreeting Images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>