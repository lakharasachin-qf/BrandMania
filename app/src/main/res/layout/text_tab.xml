<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

     <!--   <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/cancleClick"
            android:id="@+id/textRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>-->

        <com.jaredrummler.android.colorpicker.ColorPickerView
            android:visibility="gone"
            android:layout_below="@+id/cancleClick"
            android:id="@+id/colorPickerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/cancleClick"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_outline_close_24"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:tint="@color/black">
        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_below="@+id/colorChose"
            android:id="@+id/fontRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:visibility="visible"
            android:layout_below="@+id/cancleClick"
            android:id="@+id/colorChose"
            android:background="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>

<RelativeLayout
    android:layout_below="@+id/cancleClick"
    android:id="@+id/fontStyleList"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_toEndOf="@id/colorChose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
     <com.google.android.material.textfield.TextInputLayout

         android:id="@+id/categoryEdtLayout"
         style="@style/fontStyle"

         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/_10sdp"
         android:layout_marginRight="@dimen/_10sdp"
         android:hint="Text Style"
         app:hintTextColor="@color/colorPrimary"
         app:errorEnabled="true"
         android:layout_height="@dimen/_35sdp">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/categoryEdt"

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:clickable="true"
          android:drawableEnd="@drawable/ic_drop_arrow"
          android:focusable="false"
          android:fontFamily="@font/poppins_regular"
          android:maxEms="13"
          android:paddingStart="@dimen/_15sdp"

          android:paddingEnd="@dimen/_15sdp"
          android:paddingBottom="@dimen/_10sdp"
          android:textSize="@dimen/_10sdp" />
     </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>



        <RelativeLayout
            android:layout_toEndOf="@+id/colorChose"
            android:id="@+id/boldRelative"
            android:layout_below="@+id/cancleClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:visibility="gone"

            android:id="@+id/BOldTextChoose"
            android:background="@drawable/ic_bold_type"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        <ImageView

            android:visibility="gone"
            android:id="@+id/NormaTextChoose"
            android:background="@drawable/ic_outline_format_bold_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ItalicClick"
            android:layout_toEndOf="@+id/boldRelative"
            android:layout_below="@+id/cancleClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/ItalicTextChoose"
            android:background="@drawable/ic_capital_letter_i"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        <ImageView

            android:visibility="gone"
            android:id="@+id/NormalItalicTextChoose"
            android:background="@drawable/ic_baseline_format_italic_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/underLineRelativ"
            android:layout_toEndOf="@+id/ItalicClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/UndelLIneChoose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_underline"
            android:visibility="gone"></ImageView>
        <ImageView
            android:id="@+id/NormalUnderTextChoose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_format_underlined_24"
            android:visibility="gone"></ImageView>

        </RelativeLayout>
    </RelativeLayout>
</layout>