<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:layout_below="@+id/cancleClick"
            android:id="@+id/textRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"

            android:layout_below="@+id/imageChoose"
            android:id="@+id/fontRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/cancleClick"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_outline_close_24"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp">
        </ImageView>
        <ImageView
            android:visibility="visible"
            android:layout_below="@+id/cancleClick"
            android:id="@+id/imageChoose"
            android:background="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        <RelativeLayout
            android:layout_toEndOf="@+id/imageChoose"
            android:id="@+id/boldRelative"
            android:layout_below="@+id/cancleClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:visibility="gone"

            android:id="@+id/BOldTextChoose"
            android:background="@drawable/ic_bold_type"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        <ImageView

            android:visibility="gone"
            android:id="@+id/NormaTextChoose"
            android:background="@drawable/ic_outline_format_bold_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ItalicClick"
            android:layout_toEndOf="@+id/boldRelative"
            android:layout_below="@+id/cancleClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/ItalicTextChoose"
            android:background="@drawable/ic_capital_letter_i"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        <ImageView

            android:visibility="gone"
            android:id="@+id/NormalItalicTextChoose"
            android:background="@drawable/ic_baseline_format_italic_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/underLineRelativ"
            android:layout_toEndOf="@+id/ItalicClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/UndelLIneChoose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_underline"
            android:visibility="gone"></ImageView>
        <ImageView
            android:id="@+id/NormalUnderTextChoose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_format_underlined_24"
            android:visibility="gone"></ImageView>

        </RelativeLayout>
    </RelativeLayout>
</layout>