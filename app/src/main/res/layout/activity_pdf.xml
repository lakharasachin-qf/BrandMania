<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:visibility="visible"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:id="@+id/main_linearlayout_title"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/BackButtonMember"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_left_arrow"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/BackButtonMember"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Digital Card"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Your"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="Digital Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:background="@color/colorthird"
                android:layout_height="1dp"/>


            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/pdfLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardElevation="@dimen/_1sdp"
                                app:cardUseCompatPadding="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="@dimen/_60sdp"
                                app:cardPreventCornerOverlap="false"
                                android:layout_height="@dimen/_60sdp">
                                <ImageView
                                    android:id="@+id/pdfLogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:src="@drawable/placeholder" />
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/brandName"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:maxWidth="@dimen/_200sdp"
                                android:text="QueryFinders Solutions "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="#A5A5A5" />

                        <LinearLayout
                            android:id="@+id/services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Our Services :"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />

                            <View
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="@color/colorthird" />

                            <TextView
                                android:id="@+id/servicesTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:fontFamily="@font/montserrat_medium"
                                android:text=" - Website Development"
                                android:textColor="@color/black"
                                android:textSize="12dp" />


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_20sdp"

                        android:layout_above="@+id/sdsds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                         android:orientation="vertical"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Contact Us : "
                            android:textColor="@color/colorPrimary"
                            android:textSize="13dp" />

                        <View
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@color/colorthird" />
                        <LinearLayout
                            android:id="@+id/contactTxtLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="1dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:tint="@color/colorPrimary"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_pdf_phone" />
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/contactText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="+91 8200002604"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/emailTxtLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="1dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:tint="@color/colorPrimary"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_pdf_message" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/emailId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="lakharasachin.qf@gmail.com"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addressEdtLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="top"
                                app:cardCornerRadius="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="1dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:tint="@color/colorPrimary"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_pdf_location" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/address"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="326 vastral ahmedabadb gujarat rajasthan india dsjdsfsdfsds dsjf nind gujara ths tehisse gds sd"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sdsds"
                        android:layout_alignParentBottom="true"
                         android:tint="@color/colorthird"
                        android:src="@drawable/ic_wave"
                        android:layout_marginBottom="-10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_67sdp"/>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_alignParentBottom="true"
                         android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="textEnd"
                            android:textSize="10dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="Created By BrandMania."
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/buttoncornar"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:paddingStart="@dimen/_24sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:text="Export As Pdf"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
    </ScrollView>


    </LinearLayout>

</layout>