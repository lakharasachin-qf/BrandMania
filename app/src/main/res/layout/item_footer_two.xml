<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/firstView"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/cornartwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/gmailLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp">

                    <ImageView
                       android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorNavText"
                        android:id="@+id/gmailImage"
                        android:background="@drawable/ic_outline_mail_24"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"></ImageView>
                    <TextView

                        android:layout_toEndOf="@+id/gmailImage"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/gmailText"
                        android:textColor="@color/colorNavText"
                        android:padding="0dp"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:text="qfsolution@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:id="@+id/contactLayout"
                    android:layout_below="@+id/topView2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp">

                    <ImageView
                       android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorNavText"
                        android:id="@+id/contactImage"
                        android:background="@drawable/ic_outline_call_24"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"></ImageView>
                    <TextView
                        android:layout_toEndOf="@+id/contactImage"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="0dp"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:id="@+id/contactText"
                        android:textColor="@color/colorNavText"
                        android:text="8849896537"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/firstView"
                android:layout_marginTop="-2dp"
                android:background="@drawable/cornartwo">

                <RelativeLayout
                    android:id="@+id/locationLayout"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/locationImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"

                        android:background="@drawable/ic_outline_location_on_24"
                        android:backgroundTint="@color/colorNavText"></ImageView>
            <TextView

                android:layout_toEndOf="@+id/locationImage"
                android:textSize="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/locationText"
                android:padding="0dp"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textColor="@color/colorNavText"
                android:text="Vastral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/websiteLayout"
            android:layout_below="@+id/topView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp">

            <ImageView
                 android:backgroundTint="@color/colorNavText"
                android:id="@+id/websiteImage"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_outline_language_24"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"></ImageView>
            <TextView
                android:layout_toEndOf="@+id/websiteImage"
                android:textSize="@dimen/_8sdp"
                android:padding="0dp"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/websiteText"
                android:textColor="@color/colorNavText"
                android:text="qfsolution.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/elementSelected"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            app:cardElevation="@dimen/_20sdp"
            app:cardBackgroundColor="@color/colorthird"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="Selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:elevation="@dimen/_20sdp"
                    android:src="@drawable/cpv_preset_checked"
                    android:background="@color/colorPrimary"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>