<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/frontPageLayout"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frontPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bm_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/_20sdp"
                    android:minWidth="@dimen/_30sdp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/webLayout">

                    <TextView
                        android:id="@+id/phoneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:maxWidth="@dimen/_20sdp"
                        android:text="+91 8200 002604"
                        android:textAlignment="center"
                        android:textSize="@dimen/_3sdp" />


                </LinearLayout>


                <View
                    android:id="@+id/dividerEight"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/webLayout"
                    app:layout_constraintEnd_toStartOf="@id/webLayout"
                    app:layout_constraintStart_toEndOf="@id/phoneLayout"
                    app:layout_constraintTop_toTopOf="@id/webLayout" />

                <View
                    android:id="@+id/dividerNine"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/webLayout"
                    app:layout_constraintEnd_toStartOf="@id/addressLayout"
                    app:layout_constraintStart_toEndOf="@id/webLayout"
                    app:layout_constraintTop_toTopOf="@id/webLayout" />

                <LinearLayout
                    android:id="@+id/webLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/_10sdp"
                    android:minWidth="@dimen/_10sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/dividerSeven"
                    app:layout_constraintEnd_toStartOf="@id/addressLayout"
                    app:layout_constraintStart_toEndOf="@id/phoneLayout">

                    <TextView
                        android:id="@+id/webLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/webText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:maxWidth="@dimen/_30sdp"
                        android:text="info@gmail.com"
                        android:textAlignment="center"
                        android:textSize="@dimen/_5sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/_20sdp"
                    android:minWidth="@dimen/_30sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/webLayout">

                    <TextView
                        android:id="@+id/addressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/addressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:maxWidth="@dimen/_30sdp"
                        android:maxLines="3"
                        android:text="Address"
                        android:textAlignment="center"
                        android:textSize="@dimen/_5sdp" />
                </LinearLayout>


                <View
                    android:id="@+id/dividerOne"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/logo" />

                <View
                    android:id="@+id/dividerTwo"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginStart="13pt"
                    android:layout_marginEnd="13pt"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/dividerOne"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintTop_toTopOf="@id/dividerOne" />


                <View
                    android:id="@+id/dividerThree"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/logo" />

                <View
                    android:id="@+id/dividerSeven"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/dividerFive"
                    app:layout_constraintEnd_toStartOf="@id/dividerSix"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/dividerFive"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dividerSix"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/dividerSix"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@color/colorthird"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dividerFive" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>