<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_210sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true">

                            <ImageView
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/background_blue"
                                android:tint="@color/colorthird"
                                card_view:tint="@color/colorthird" />

                            <ImageView
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_65sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:src="@drawable/ic_undraw_request_bussiness_cat" />
                            <ImageView
                                android:id="@+id/close"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_3sdp"
                                android:layout_alignParentEnd="true"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_outline_close_24"  />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/label2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/label3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingStart="@dimen/_14sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="Request New"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_extrabold"
                                android:paddingStart="@dimen/_14sdp"
                                android:text="Business Category"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/label2"
                            android:layout_marginEnd="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_14sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_14sdp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/nameTxtLayout"
                                style="@style/LoginTextInputLayoutStyle"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Category"
                                app:errorEnabled="true"
                                app:hintTextColor="@color/colorPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/nameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:inputType="textCapWords"
                                    android:paddingTop="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textSize="@dimen/_9sdp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/submit"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:background="@drawable/buttoncornar"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:paddingStart="@dimen/_24sdp"
                                android:paddingEnd="@dimen/_24sdp"
                                android:text="Submit"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#FFF"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">


                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
</layout>