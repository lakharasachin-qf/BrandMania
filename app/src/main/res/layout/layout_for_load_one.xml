<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                 android:id="@+id/topView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary" />

            <View
                android:id="@+id/topView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/main"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp">


                <RelativeLayout

                    android:id="@+id/gmailLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/gmailImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:src="@drawable/ic_outline_mail_24" />

                    <TextView
                        android:id="@+id/gmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/gmailImage"
                        android:fontFamily="@font/inter_regular"
                        android:singleLine="true"
                        android:text="qfsolution@gmail.com"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/contactLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_220sdp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/contactImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:src="@drawable/ic_outline_call_24" />

                    <TextView
                        android:id="@+id/contactText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/contactImage"
                      android:fontFamily="@font/inter_regular"
                        android:singleLine="true"

                        android:text="8849896537"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_below="@+id/main"
                android:id="@+id/addressLayoutElement2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:background="@color/colorPrimary">
                              <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/addressLayoutElement"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    >

                    <ImageView
                        android:id="@+id/loacationImage"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:src="@drawable/ic_outline_location_on_24"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/loacationImage"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>

                     </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>