<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:background="@drawable/temporary"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/colorPrimary"
            android:backgroundTint="#87b927"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"

            app:layout_constraintBottom_toBottomOf="@id/emailEdt"
            app:layout_constraintStart_toStartOf="@id/socialBackground" />

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@color/colorPrimary"
            android:backgroundTint="#87b927"
            app:layout_constraintBottom_toTopOf="@id/socialBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/socialBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/shapeee_round_cornar_footer"
            android:backgroundTint="#87b927"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView

                android:id="@+id/fb"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_phone" />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"

                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_outline_mail_24" />


        </LinearLayout>

        <TextView
            android:id="@+id/phoneTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:text="+91 8200002604"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintStart_toEndOf="@id/socialBackground"
            app:layout_constraintTop_toTopOf="@id/socialBackground" />

        <TextView
            android:id="@+id/emailEdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:text="www.queryfinders.com"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintStart_toEndOf="@id/socialBackground"
            app:layout_constraintTop_toBottomOf="@id/phoneTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>