<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/frameRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_30sdp" />


                <LinearLayout
                    android:id="@+id/allFreeImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:focusable="true"
                        android:padding="@dimen/_10sdp"
                        card_view:cardCornerRadius="@dimen/_12sdp"
                        card_view:cardElevation="@dimen/_7sdp"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/freeOfferImg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/frame_request" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/subscribeFreePlaneBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/buttoncornar"
                        android:backgroundTint="@color/colorthird"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="     Request For Frame     "
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/frameRequestLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/addbrandTag"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/buttoncornar"
                        android:backgroundTint="@color/colorthird"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:text="Add Brand"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:text="There is not frames provided\nto you for your brand."
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/subscribePlaneBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:background="@drawable/buttoncornar"
                                android:backgroundTint="@color/colorthird"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:text="     Request For Frame     "
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#FFF"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/removeFrameBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:layout_toEndOf="@+id/subscribePlaneBtn"
                                android:background="@drawable/buttoncornar"
                                android:backgroundTint="@color/colorthird"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:text="     Remove Frame/Footer    "
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#FFF"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#FFF8EC"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:minHeight="@dimen/_200sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Add "
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_extrabold"
                                android:text="Your"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:includeFontPadding="false"
                            android:text="Brand"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_26sdp" />

                        <View
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_2sdp"
                            android:background="@drawable/addbrandview"
                            android:backgroundTint="#D5D5D5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Currently you have no brand for your account. Please add brand and enjoy using our app."
                            android:textSize="@dimen/_8sdp" />


                        <RelativeLayout
                            android:id="@+id/continueBtn"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/banner_button_backgroundshap"
                            android:backgroundTint="@color/colorthird">

                            <TextView
                                android:id="@+id/regBtn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_32sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:letterSpacing="0"
                                android:text="     Continue"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textDirection="ltr"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:layout_width="@dimen/_19sdp"
                                android:layout_height="@dimen/_19sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@drawable/addbrandbackgroundshap"
                                android:elevation="@dimen/_3sdp"
                                android:padding="@dimen/_6sdp"
                                android:src="@drawable/ic_round_arrow_forward_ios_24"
                                app:tint="@color/colorPrimary" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:src="@drawable/ic_add_brand_illustration" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>
