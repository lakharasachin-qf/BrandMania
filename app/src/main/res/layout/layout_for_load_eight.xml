<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"

        >
        <RelativeLayout
            android:id="@+id/BrandNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View

                android:layout_toStartOf="@+id/brandNameText"
                android:id="@+id/viewone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/topView"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary" />
            <TextView

                android:layout_centerHorizontal="true"
                android:id="@+id/brandNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="Brand Mania"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
            <View
                android:layout_toEndOf="@+id/brandNameText"
                android:id="@+id/topView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_centerVertical="true"

                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/element1"
            android:layout_below="@+id/BrandNameLayout"
            android:visibility="visible"
            android:paddingStart="@dimen/_7sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

            <RelativeLayout
                android:layout_toStartOf="@+id/viewOne"
                android:id="@+id/gmailLayout"
                android:layout_width="wrap_content"

                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/gmailImage"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:src="@drawable/ic_outline_mail_24" />

                <TextView
                    android:id="@+id/gmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/gmailImage"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="qfsolution@gmail.com"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>


            <View
                android:layout_centerVertical="true"
                android:id="@+id/viewOne"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@color/colorPrimary"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_toEndOf="@+id/viewOne"
                android:id="@+id/contactLayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/contactImage"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:src="@drawable/ic_outline_call_24" />

                <TextView
                    android:id="@+id/contactText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/contactImage"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:singleLine="true"

                    android:text="8849896537"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/element1"
            android:paddingStart="@dimen/_7sdp"
            android:layout_centerHorizontal="true"
            android:paddingEnd="@dimen/_7sdp"
            android:id="@+id/addressLayoutElement"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            >

            <ImageView
                android:id="@+id/loacationImage"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:src="@drawable/ic_outline_location_on_24"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_10sdp"
                android:singleLine="true"

                android:text="326,Rudra Complex Vastral"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/loacationImage"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>