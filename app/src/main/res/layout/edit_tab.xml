<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp" />


        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="visible"
            android:clipToPadding="false"
            android:layout_marginStart="@dimen/_12sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:layout_height="@dimen/_80sdp"
            android:id="@+id/filterRecycler"
            android:layout_width="match_parent"
            android:layout_below="@+id/textFilter" />







        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="visible"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/colorboxtroundcorner"
            android:id="@+id/boldRelative"
            android:layout_below="@+id/filterRecycler"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_height="wrap_content">


<!--            <ImageView-->
<!--                android:layout_centerVertical="true"-->
<!--                android:visibility="visible"-->
<!--                android:padding="@dimen/_5sdp"-->
<!--                -->
<!--                android:id="@+id/rotateImage"-->
<!--                android:background="@drawable/ic_outline_cached_24"-->
<!--                android:layout_width="@dimen/_25sdp"-->
<!--                android:backgroundTint="@color/black"-->
<!--                android:layout_height="@dimen/_25sdp">-->


            <ImageView
                android:layout_toEndOf="@+id/boldText"
                android:layout_marginLeft="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/black"
                android:id="@+id/italicText"
                android:background="@drawable/ic_baseline_format_italic_24"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">
            </ImageView>

            <ImageView

                android:backgroundTint="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/italicText"
                android:id="@+id/underlineText"
                android:layout_width="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_20sdp"

                android:background="@drawable/ic_baseline_format_underlined_24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/label"
                android:text="Opacity"
                android:layout_marginTop="@dimen/_5sdp"
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/inter_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
            android:layout_below="@+id/label"
                android:visibility="visible"
                android:theme="@style/SeekBarColor"
                android:id="@+id/seekBar"
                android:max="255"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_toEndOf="@+id/underlineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/colorboxtroundcorner"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/boldRelative"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerVertical="true"
                android:backgroundTint="@color/black"
                android:id="@+id/cropImage"
                android:background="@drawable/ic_crop_black_24dp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">
            </ImageView>

            <ImageView
                android:layout_toEndOf="@+id/cropImage"
                android:backgroundTint="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/rotateImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_20sdp"

                android:background="@drawable/ic_outline_cached_24"/>

        </RelativeLayout>
    </RelativeLayout>
</layout>