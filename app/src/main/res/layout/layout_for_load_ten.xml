<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/addressEdtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/roundbackground"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_outline_location_on_24"
                app:tint="@color/colorNavText" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:singleLine="true"
                android:text="regre"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/addressEdtLayout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gmailImage"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_outline_mail_24"
                android:background="@drawable/roundbackground"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:tint="@color/colorNavText" />


            <TextView
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/gmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_toEndOf="@+id/gmailImage"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:singleLine="true"
                android:text="qfsolution@gmail.com"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp" />


            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_toEndOf="@+id/gmailText"
                android:id="@+id/callImage"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_outline_call_24"
                android:background="@drawable/roundbackground"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:tint="@color/colorNavText" />
            <TextView

                android:id="@+id/contactText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/callImage"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:singleLine="true"
                android:text="8849896537"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>
    </RelativeLayout>
</layout>