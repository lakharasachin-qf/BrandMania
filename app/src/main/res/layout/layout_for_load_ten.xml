<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/addressEdtLayout"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/locationImage"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/roundbackground"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_outline_location_on_24"
                        app:tint="@color/colorNavText" />

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/locationImage"
                        android:includeFontPadding="false"
                        android:padding="0dp"
                        android:text="@string/hint_address"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/addressLayout"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="@dimen/_18sdp"
                        android:id="@+id/callImage"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_outline_call_24"
                        android:background="@drawable/roundbackground"
                        android:layout_height="@dimen/_18sdp"
                        app:tint="@color/colorNavText" />

                    <TextView

                        android:id="@+id/contactText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/callImage"
                        android:includeFontPadding="false"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_mobile"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />


                    <ImageView
                        android:layout_toEndOf="@+id/contactText"
                        android:id="@+id/gmailImage"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_outline_mail_24"
                        android:background="@drawable/roundbackground"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:tint="@color/colorNavText" />


                    <TextView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:id="@+id/gmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_toEndOf="@+id/gmailImage"
                        android:includeFontPadding="false"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="@string/hint_email"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
</layout>