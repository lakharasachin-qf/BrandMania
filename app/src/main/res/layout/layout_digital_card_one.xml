<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/frontPageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_178sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frontPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1B113A">

                <View
                    android:id="@+id/leftView"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="-10dp"
                    android:background="@drawable/digital_card_round_rect"
                    android:backgroundTint="@color/colorthird"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/rightView"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginEnd="-10dp"
                    android:background="@drawable/digital_card_round_rect"
                    android:backgroundTint="@color/colorthird"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/bm_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:id="@+id/websiteTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:letterSpacing="0.2"
                    android:text="your website"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_178sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frontPageLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <View
                    android:id="@+id/vertical2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="10pt"
                    android:background="#1B113A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/backPageInner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="#E8E8E8">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/bm_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/verticalView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <View
                        android:id="@+id/verticalView"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="#1B113A"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/userIcon"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/ic_outline_call_24"
                        app:layout_constraintBottom_toBottomOf="@id/verticalView"
                        app:layout_constraintEnd_toEndOf="@id/verticalView"
                        app:layout_constraintStart_toStartOf="@id/verticalView"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/brandName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="Mobile Number"
                        android:textSize="@dimen/_8sdp"
                        app:layout_constraintBottom_toBottomOf="@id/verticalView"
                        app:layout_constraintStart_toEndOf="@id/verticalView" />

                    <ImageView
                        android:id="@+id/callIcon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/colorthird"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_outline_mail_24"
                        app:layout_constraintEnd_toEndOf="@id/verticalView"
                        app:layout_constraintStart_toStartOf="@id/verticalView"
                        app:layout_constraintTop_toBottomOf="@id/verticalView"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/phoneTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:text="Your Email Id"
                        android:textSize="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/callIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/callIcon"
                        app:layout_constraintTop_toTopOf="@+id/callIcon" />

                    <ImageView
                        android:id="@+id/websiteIcon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/colorthird"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/website"
                        app:layout_constraintEnd_toEndOf="@id/verticalView"
                        app:layout_constraintStart_toStartOf="@id/verticalView"
                        app:layout_constraintTop_toBottomOf="@id/callIcon"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/websiteTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:includeFontPadding="false"
                        android:text="Your Website"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="@id/websiteIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/websiteIcon"
                        app:layout_constraintTop_toTopOf="@id/websiteIcon" />

                    <ImageView
                        android:id="@+id/addressIcon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/colorthird"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_outline_location_on_24"
                        app:layout_constraintEnd_toEndOf="@id/verticalView"
                        app:layout_constraintStart_toStartOf="@id/verticalView"
                        app:layout_constraintTop_toBottomOf="@id/websiteIcon"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/addressTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:includeFontPadding="false"
                        android:text="Your Adress"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="@id/addressIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/addressIcon"
                        app:layout_constraintTop_toTopOf="@id/addressIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>