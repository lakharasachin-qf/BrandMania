<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/footerLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/gmailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_20sdp">

                        <ImageView
                            android:id="@+id/gmailImage"
android:layout_centerVertical="true"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                             android:src="@drawable/ic_outline_mail_24" />

                        <TextView
                            android:id="@+id/gmailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:padding="0dp"
                            android:layout_centerVertical="true"
                            android:includeFontPadding="false"
                            android:layout_toEndOf="@+id/gmailImage"
                            android:text="qfsolution@gmail.com"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp" />

                    </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/loactionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_12sdp"

                        android:backgroundTint="@color/colorPrimary"
                        android:id="@+id/loacationImage"
                        android:background="@drawable/ic_outline_location_on_24"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_20sdp"></ImageView>

                    <TextView
                        android:layout_height="wrap_content"
                         android:layout_toEndOf="@+id/loacationImage"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="0dp"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:id="@+id/locationText"
                        android:textColor="@color/colorPrimary"
                        android:text="Vastral"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_8sdp"></TextView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/contactLayout"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp">

                    <ImageView
                       android:layout_centerVertical="true"

                        android:id="@+id/contactImage"
                        android:src="@drawable/ic_outline_call_24"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"></ImageView>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/contactImage"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="0dp"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:id="@+id/contactText"
                        android:textColor="@color/colorPrimary"
                        android:text="8849896537"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_8sdp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/websiteEdtLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp">

                    <ImageView
                        android:layout_centerVertical="true"
                         android:backgroundTint="@color/colorPrimary"
                        android:id="@+id/websiteImage"
                        android:background="@drawable/ic_outline_language_24"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"></ImageView>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/websiteImage"
                        android:layout_marginStart="@dimen/_5sdp"

                        android:id="@+id/websiteText"
                        android:textColor="@color/colorPrimary"
                        android:text="qfsolution.com"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/elementSelected"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            app:cardElevation="@dimen/_20sdp"
            app:cardBackgroundColor="@color/colorthird"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="Selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:elevation="@dimen/_20sdp"
                    android:src="@drawable/cpv_preset_checked"
                    android:background="@color/colorPrimary"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>