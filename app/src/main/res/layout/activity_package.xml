<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme_material_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/toolbar_background_second"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:id="@+id/main_linearlayout_title"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/BackButtonMember"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_left_arrow"></ImageView>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/primiumImage"
           android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_premium"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
        </ImageView>
<TextView
    android:layout_marginTop="@dimen/_12sdp"
    android:id="@+id/upgradeTitle"
    android:textColor="@color/colorPrimary"
    android:fontFamily="@font/inter_bold"
    android:textSize="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_toEndOf="@+id/primiumImage"
    android:text="Upgrade to Premium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/upgradeContent"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toEndOf="@+id/primiumImage"
            android:layout_below="@+id/upgradeTitle"
            android:text="Here's what you get "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImageSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        ></androidx.viewpager2.widget.ViewPager2>
</RelativeLayout>
</layout>