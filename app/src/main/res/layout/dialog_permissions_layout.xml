                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_subscription" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/imaegSection2"
                android:id="@+id/titleLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/permissionTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/checked2"
                    android:text="Storage Access"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/checked2"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_check_new"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/permissionSubText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@+id/titleLayout2"
                android:layout_toEndOf="@+id/imaegSection2"
                android:fontFamily="@font/inter_regular"
                android:text="Brand Mania need your storage to download image to your storage"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>
