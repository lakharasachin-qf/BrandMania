<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/colorPrimary"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
       android:layout_centerHorizontal="true"
       android:id="@+id/alertShow"
       android:layout_gravity="center"
       android:textAlignment="center"
       android:layout_marginTop="@dimen/_30sdp"
       android:text="Your frame is not ready yet ! Please contact to admin."
       android:textColor="@color/colorNavText"
       android:fontFamily="@font/inter_medium"
       android:textSize="@dimen/_15sdp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
   </TextView>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/alertShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/call"
            android:src="@drawable/ic_phonewhite"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"></ImageView>
        <ImageView
            android:id="@+id/whatsapp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_whatsappwhite"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"></ImageView>
    </LinearLayout>

</LinearLayout>