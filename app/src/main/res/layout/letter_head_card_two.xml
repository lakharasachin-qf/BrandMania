<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/MainLatterHeadLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/latterHeadLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/latterhead_background_outline">

                <ImageView
                    android:id="@+id/mainImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:elevation="@dimen/_10sdp"
                    android:padding="@dimen/_1sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/diwali_offer"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/footerOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:elevation="@dimen/_10sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/diwali_offer"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/bm_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/dividerThree"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    app:layout_constraintEnd_toStartOf="@+id/logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo" />

                <View
                    android:id="@+id/dividerFour"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="30pt"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    app:layout_constraintStart_toEndOf="@+id/logo"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/dividerSeven"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/dividerFive"
                    app:layout_constraintEnd_toStartOf="@id/dividerSix"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/_90sdp"
                    android:minWidth="@dimen/_80sdp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/webLayout">

                    <TextView
                        android:id="@+id/phoneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:maxWidth="@dimen/_90sdp"
                        android:text="+91 8200 002604"
                        android:textAlignment="center"
                        android:textSize="@dimen/_7sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/webLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:maxWidth="@dimen/_90sdp"
                    android:minWidth="@dimen/_60sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/dividerSeven"
                    app:layout_constraintEnd_toStartOf="@id/addressLayout"
                    app:layout_constraintStart_toEndOf="@id/phoneLayout">

                    <TextView
                        android:id="@+id/webLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/webText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:maxWidth="@dimen/_90sdp"
                        android:text="info@gmail.com\nwww.brandmania.com"
                        android:textAlignment="center"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="@dimen/_90sdp"
                    android:minWidth="@dimen/_95sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/webLayout">

                    <TextView
                        android:id="@+id/addressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/addressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:maxWidth="@dimen/_90sdp"
                        android:maxLines="3"
                        android:text="512, Satva complex, Vastral, Ahmedabad, Gujarat"
                        android:textAlignment="center"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>


                <View
                    android:id="@+id/dividerEight"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="@+id/phoneLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phoneLayout" />

                <View
                    android:id="@+id/dividerWeb"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="@+id/webLayout"
                    app:layout_constraintStart_toStartOf="@+id/webLayout"
                    app:layout_constraintTop_toBottomOf="@+id/webLayout" />

                <View
                    android:id="@+id/dividerAddress"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="@+id/addressLayout"
                    app:layout_constraintStart_toStartOf="@+id/addressLayout"
                    app:layout_constraintTop_toBottomOf="@+id/addressLayout" />


                <View
                    android:id="@+id/dividerFive"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dividerSix"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/dividerSix"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/colorthird"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dividerFive" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/mainImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/diwali_offer"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>