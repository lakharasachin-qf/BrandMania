<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_screen"
                tools:context=".Activity.basics.OtpScreenActivity">

                <TextView
                    android:id="@+id/verifyOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:fontFamily="@font/inter_extrabold"
                    android:textColor="@color/colorNavText"
                    android:textSize="@dimen/_20sdp" />


                <TextView
                    android:id="@+id/verificationChildTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_340sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/changeContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verificationChildTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/verificationNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_300sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <com.app.brandmania.views.OtpTextView
                    android:id="@+id/otpView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:elevation="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:box_margin="@dimen/_7sdp"
                    app:box_margin_bottom="@dimen/_2sdp"
                    app:length="4"
                    app:otp_box_background="@drawable/shape_otp"
                    app:otp_box_background_active="@drawable/shape_otp_focued"
                    app:otp_text_size="@dimen/_16sdp"
                    app:text_typeface="bold" />


                <RelativeLayout
                    android:id="@+id/otpRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/changeContact"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:visibility="visible">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/otpTxtLayout"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_100sdp"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/otpTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/otpOne"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rectangleshape"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/otpTwo"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/otpOne"
                        android:background="@drawable/rectangleshape"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/otpThree"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/otpTwo"
                        android:background="@drawable/rectangleshape"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/otpFour"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/otpThree"
                        android:background="@drawable/rectangleshape"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <!--            <EditText-->
                    <!--                android:id="@+id/otpFive"-->
                    <!--                android:layout_width="@dimen/_35sdp"-->
                    <!--                android:layout_height="@dimen/_35sdp"-->
                    <!--                android:layout_marginLeft="@dimen/_8sdp"-->
                    <!--                android:layout_toEndOf="@+id/otpFour"-->
                    <!--                android:background="@drawable/rectangleshape"-->
                    <!--                android:fontFamily="@font/inter_regular"-->
                    <!--                android:inputType="number"-->
                    <!--                android:maxLength="1"-->
                    <!--                android:textAlignment="center"-->
                    <!--                android:textColor="@color/colorPrimary"-->
                    <!--                android:textSize="@dimen/_15sdp"/>-->
                    <!--            <EditText-->
                    <!--                android:id="@+id/otpSix"-->
                    <!--                android:layout_width="@dimen/_35sdp"-->
                    <!--                android:layout_height="@dimen/_35sdp"-->
                    <!--                android:layout_marginLeft="@dimen/_8sdp"-->
                    <!--                android:layout_toEndOf="@+id/otpFive"-->
                    <!--                android:background="@drawable/rectangleshape"-->
                    <!--                android:fontFamily="@font/inter_regular"-->
                    <!--                android:inputType="number"-->
                    <!--                android:maxLength="1"-->
                    <!--                android:textAlignment="center"-->
                    <!--                android:textColor="@color/colorPrimary"-->
                    <!--                android:textSize="@dimen/_15sdp"/>-->

                </RelativeLayout>

                <ImageView
                    android:id="@+id/regBtn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/otpRelative"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/roundbackground"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_right_arrow" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/noteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regBtn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_20sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/note" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Otp Valid Till 20 Minutes"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/counterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regBtn"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/ResendText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/CouterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</layout>