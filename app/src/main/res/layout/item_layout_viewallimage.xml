<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        card_view:cardCornerRadius="@dimen/_10sdp"
        card_view:cardElevation="@dimen/_4sdp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />



            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/elementPremium"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_crown"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/freePremium"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_freee"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/playerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/play_icon_background"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/placeHolderImage"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:gravity="center"
                    android:src="@drawable/ic_round_play_arrow_24" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gifVideoLayout"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/giflayout_shape"
                android:visibility="gone">

                <TextView
                    android:id="@+id/labeledForGV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="GIF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>