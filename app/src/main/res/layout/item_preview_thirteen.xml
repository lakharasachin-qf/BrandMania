<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_128sdp"
        android:layout_height="@dimen/_128sdp"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/itemLayout"
            android:background="@drawable/temporary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_10sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/footer_rect_tri_from_top_bottom_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="+91 8200002604"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_3sdp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/footer_rect_tri_from_all" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/layer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/footer_rect_tri_from_left_bottom_top"
                    android:scaleType="fitEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layer"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="lakharasachin@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_3sdp" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>