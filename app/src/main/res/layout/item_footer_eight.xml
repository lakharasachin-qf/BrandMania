<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

              >
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/BrandNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp">
                <View

                    android:layout_toStartOf="@+id/brandNameText"
                    android:id="@+id/viewone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/topView"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary" />
                <TextView

                    android:layout_centerHorizontal="true"
                    android:id="@+id/brandNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="Brand Mghfghfania"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
                <View
                    android:layout_toEndOf="@+id/brandNameText"
                    android:id="@+id/topView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"

                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/element1"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/BrandNameLayout"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="visible"
                        android:layout_toEndOf="@+id/element"
                        android:id="@+id/gmailLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ImageView

                            app:tint="@color/colorPrimary"
                            android:id="@+id/gmailImage"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:src="@drawable/ic_outline_mail_24" />

                        <TextView
                            android:id="@+id/gmailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/gmailImage"
                            android:includeFontPadding="false"
                            android:padding="0dp"
                            android:singleLine="true"
                            android:text="qfsolfddgdfgfdgdfgdgdfution@gmail.com"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp" />

                    </RelativeLayout>

                    <View
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/element"
                        android:background="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_10sdp" />
                    <RelativeLayout
                        android:layout_toStartOf="@+id/element"
                        android:visibility="visible"
                        android:id="@+id/contactLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ImageView
                            app:tint="@color/colorPrimary"
                            android:id="@+id/contactImage"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:src="@drawable/ic_outline_call_24" />

                        <TextView
                            android:id="@+id/contactText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/contactImage"
                            android:includeFontPadding="false"
                            android:padding="0dp"
                            android:singleLine="true"

                            android:text="+91 8849896537"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp" />

                    </RelativeLayout>
                </RelativeLayout>



                    <RelativeLayout
                        android:layout_below="@+id/element1"

                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/addressLayoutElement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView

                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/loacationImage"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:src="@drawable/ic_outline_location_on_24"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="326,Rudra Complex Vastral"
                            android:layout_centerVertical="true"
                            android:includeFontPadding="false"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/loacationImage"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp" />
                        </RelativeLayout>
                    </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/elementSelected"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/colorthird"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="Selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:elevation="@dimen/_20sdp"
                    android:src="@drawable/cpv_preset_checked"
                    android:background="@color/colorPrimary"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/elementPremium"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_alignParentEnd="true"
            android:elevation="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:elevation="@dimen/_20sdp"
                android:src="@drawable/ic_crown"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>
        <RelativeLayout

            android:visibility="gone"
            android:id="@+id/freePremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:elevation="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:elevation="@dimen/_20sdp"
                android:src="@drawable/ic_freee" />
        </RelativeLayout>
    </RelativeLayout>
</layout>